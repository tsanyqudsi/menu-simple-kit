{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "baseUrl": "./",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "types": [
            "@modyfi/vite-plugin-yaml/modules",
            "vite/client",
            "vite-plugin-pages/client-react"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "paths": {
            "@assets": [
                "src/assets"
            ],
            "@layouts": [
                "src/layouts"
            ],
            "@pages": [
                "src/pages"
            ],
            "@": [
                "src"
            ],
            "@components": [
                "src/components"
            ],
            "@api": [
                "src/api"
            ],
            "@configs": [
                "src/configs"
            ],
            "@store": [
                "src/store"
            ],
            "@logo": [
                "src/configs/logo"
            ],
            "@theme": [
                "src/theme"
            ]
        }
    },
    "include": [
        "src"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}